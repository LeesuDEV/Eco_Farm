<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/newFarm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ced4da"
        android:weightSum="10"
        android:gravity="center"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아직 농작물이 없어요!"
                    android:layout_marginLeft="4dp"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:textColor="#2EB607"
                    android:layout_gravity="center"
                    android:fontFamily="@font/netmarble_bold"/>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="어떤 농작물을 키울래요?"
                    android:layout_marginLeft="4dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:fontFamily="@font/netmarble_bold"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/selectFarmTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:text=""
                        android:textSize="20sp"
                        android:textColor="#6A6A6A"
                        android:fontFamily="@font/netmarble_bold"
                        android:textAlignment="center"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="250dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이것들을 고려 해보세요"
                        android:layout_marginLeft="4dp"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:fontFamily="@font/netmarble_bold"/>

                    <TextView
                        android:id="@+id/carefulTV"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="4dp"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="#535353"
                        android:layout_gravity="center"
                        android:fontFamily="@font/netmarble_bold"
                        android:textAlignment="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/registerFarmBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="등록할래!"
                    android:gravity="center"
                    android:fontFamily="@font/netmarble_bold"
                    android:textSize="20dp"
                    android:background="#5DA66A"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/farmStatus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/main_image"
        android:weightSum="10"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/myNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/netmarble_bold"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    android:textColor="#7CE35F"
                    android:text=""
                    android:shadowDy="3"
                    android:shadowDx="3"
                    android:shadowRadius="3"
                    android:shadowColor="#000000"/>
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="님의 농장현황"
                    android:layout_marginLeft="4dp"
                    android:textSize="26dp"
                    android:textStyle="bold"
                    android:textColor="#2EB607"
                    android:layout_gravity="center"
                    android:fontFamily="@font/netmarble_bold"/>
            </LinearLayout>
        </FrameLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="0dp"
            android:layout_weight="3"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/cropsImageView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/sangchu"
                        android:padding="20dp"/>

                    <TextView
                        android:id="@+id/cropsTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="상추"
                        android:textColor="#000000"
                        android:fontFamily="@font/netmarble_bold"
                        android:gravity="center"
                        android:textSize="24sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시작일 : "
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:fontFamily="@font/netmarble_medium"/>
                        <TextView
                            android:id="@+id/startDateTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:fontFamily="@font/netmarble_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="예상종료일 : "
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:fontFamily="@font/netmarble_medium"/>
                        <TextView
                            android:id="@+id/expireDateTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:fontFamily="@font/netmarble_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:layout_marginTop="40dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나이 : "
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:fontFamily="@font/netmarble_medium"/>
                        <TextView
                            android:id="@+id/growthDateTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="데이터를 불러오는중"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:fontFamily="@font/netmarble_bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal"
                       >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="현재상태 : "
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:fontFamily="@font/netmarble_medium"/>
                        <TextView
                            android:id="@+id/growthStateTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:fontFamily="@font/netmarble_bold"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="온도"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_corner_box"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:layout_width="59dp"
                        android:layout_height="78dp"
                        android:src="@drawable/temperture"
                        app:tint="#00ff00" />

                    <TextView
                        android:id="@+id/nowTempTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="습도"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_corner_box"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:layout_width="59dp"
                        android:layout_height="78dp"
                        android:src="@drawable/water_percent"
                        app:tint="#A4E5F1" />

                    <TextView
                        android:id="@+id/nowHumTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조명%"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_corner_box"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">

                        <ImageView
                            android:layout_width="59dp"
                            android:layout_height="78dp"
                            android:src="@drawable/light"
                            app:tint="#FAE316" />

                        <TextView
                            android:id="@+id/nowBrightnessTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:text=""
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="물잔량"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_corner_box"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">

                        <ImageView
                            android:layout_width="59dp"
                            android:layout_height="78dp"
                            android:src="@drawable/water_left"
                            app:tint="#4A9DE6" />

                        <TextView
                            android:id="@+id/nowWaterLevelTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:text=""
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>